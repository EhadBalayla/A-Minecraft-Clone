#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec2 aTexCoords;
layout (location = 2) in uint aLiquidFlag;

out vec2 TexCoords;

uniform mat4 view;
uniform mat4 projection;
uniform mat4 model;

void main() {
	vec3 pos = vec3(aPos.x, aPos.y - (1 - (float(aLiquidFlag) / 10.0)), aPos.z);
	vec2 uv = vec2(aTexCoords) / 256;
	gl_Position = projection * view * model * vec4(pos, 1.0);
	TexCoords = uv;
}